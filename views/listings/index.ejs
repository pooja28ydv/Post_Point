<% layout("/layouts/boilerplate.ejs") %> 

        <% if (messages.error && messages.error.length > 0) { %>
          <div class="alert alert-danger">
              <%= messages.error %>
          </div>
      <% } %>

        <form method="GET" action="/listings" class="mb-3  d-flex align-items-center">
          <input type="text" name="search" placeholder="Search Blog..." value="<%= search || '' %>" class="form-control me-3" style="flex-grow: 1;" />
          <button type="submit" class="btn btn-dark mt-2">Search</button>
          <select name="category" class="form-control me-2" style="width: auto;" >
            <option value="Choose category">All Categories</option>
            <option value="Animal">Animal</option>
            <option value="Travel">Travel</option>
            <option value="Food">Food</option>
            <option value="Education">Education</option>
            <option value="Art">Art</option>
            <option value="Lifestyle">Lifestyle</option>
            <option value="Entertainment">Entertainment</option>
            <option value="Sport">Sport</option>
            <option value="Technology">Technology</option>
            <!-- Add more categories as needed -->
          </select>
          <button type="submit" class="btn btn-dark mt-2">Search</button>
      </form>

           <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

               <%  for(let listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing-link" >
               <div class="card col listing-card" style="width: 20rem;">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                 <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b><br>
                    <!-- <span>Average Rating: <%= listing.averageRating.toFixed(1) %></span> -->
                    <span>Average Rating: <%= listing.averageRating !== undefined ? listing.averageRating.toFixed(1) : 'N/A' %></span>
 
                  </p>
                </div>
              </div>
            </a>
              <% } %>
           </div>



